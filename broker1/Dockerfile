# broker/Dockerfile
FROM confluentinc/cp-kafka:7.3.2

ENV KAFKA_BROKER_ID=1
ENV KAFKA_ZOOKEEPER_CONNECT=kafka-server-tjn5.onrender.com:2181
ENV KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_INTERNAL:PLAINTEXT
ENV KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka-server-1-igh9.onrender.com:9093,PLAINTEXT_INTERNAL://broker:29093
ENV KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
ENV KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
ENV KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1

EXPOSE 9093